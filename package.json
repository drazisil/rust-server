{
  "name": "oxide",
  "version": "1.0.0",
  "description": "A modular, production-ready TypeScript TCP socket server (GPL-3.0-or-later)",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev": "ts-node src/server.ts",
    "admin": "ts-node src/admin-cli.ts",
    "test": "vitest run",
    "postinstall": "sh ./postinstall.sh"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "commander": "^14.0.0",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "sequelize": "^6.37.7",
    "socket.io": "^4.0.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.0",
    "@types/node": "^22.15.29",
    "@types/socket.io": "^3.0.0",
    "ts-node": "^10.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.0.0",
    "vitest": "^3.2.1"
  },
  "engines": {
    "node": ">=12.0.0"
  },
